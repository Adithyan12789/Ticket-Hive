{
  "compilerOptions": {
    "target": "ES2020",                        // Specifies ECMAScript target version
    "module": "commonjs",                      // Specifies module code generation
    "rootDir": "./Back-End",                   // Root directory of TypeScript source files
    "outDir": "./dist",                        // Output directory for compiled files
    "esModuleInterop": true,                   // Enables compatibility with ES6 modules
    "strict": true,                            // Enable all strict type-checking options
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true                    // Skip type checking of declaration files
  },
  "include": ["Back-End/**/*.ts", "Back-End/server.ts", "Back-End/Middlewares/AdminAuthMiddleware.jsx"],              // Include all .ts files in Back-End folder
  "exclude": ["Back-End/node_modules"]                  // Exclude node_modules from compilation
}
